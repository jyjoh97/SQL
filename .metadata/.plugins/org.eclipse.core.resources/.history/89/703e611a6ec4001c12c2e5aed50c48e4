    pageEncoding="UTF-8"%>
<%@ page import="java.sql.*" %>
<%
	request.setCharacterEncoding("UTF-8");
	String uid = request.getParameter("uid");	//파라미터명은 요청 페이지의 name과 일치
	String upw = request.getParameter("upw");	//파라미터명은 요청 페이지의 name과 일치
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>로그인</title>
<link rel="stylesheet" href="reset.css">
</head>

<body>
<div class="wrap">
		<header id="hd">
			<div class="hd_wrap">
				<%@ include file="nav.jsp" %>
			</div>
		</header>
	<div class="content">
		<h2>입력한 회원 정보</h2>
		<p>아이디 : <%=uid %></p>
		<p>비밀번호 : <%=upw %></p>
	<%
		Connection conn = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		
		try {
			Class.forName("org.mariadb.jdbc.Driver");
			conn = DriverManager.getConnection("jdbc:mairadb://localhost:3308/company", "root", "1234");
			String sql = "select  * from member where id=? and pw=?";
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, uid);
			//pstmt.setString(2, upw);
			rs = pstmt.executeQuery(sql);			
		if(rs.next()) {
			String id = rs.getString("id");
			String pw = rs.getString("pw");
			String name = rs.getString("name");
			if(uid.equals(id)){
				session.setAttribute("uid", uid);
				session.setAttribute("name", "재영님");
				response.sendRedirect("index.jsp");
			} else {
					//비밀번호가 다를때
					response.sendRedirect("login.jsp");
			} 
			
		} else { 
			//입력한 아이디가 회원가입이 되어 있지 않은 경우(member 테이블에 해당 id가 존재하지 않음)
			response.sendRedirect("login.jsp");
		}
		
		} catch(Exception e) {
			
		} finally { 
			
		}
		
		
	%>
	</div>
<footer id="ft">
	<%@ include file="ft.jsp" %>
</footer>

</div>
</body>
